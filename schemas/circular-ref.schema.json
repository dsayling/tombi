{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Circular reference test schema",
  "definitions": {
    "task": {
      "oneOf": [
        { "type": "string" },
        { "$ref": "#/definitions/cmd_task" },
        { "$ref": "#/definitions/sequence_task" }
      ]
    },
    "cmd_task": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "cmd": { "type": "string" },
            "help": { "type": "string" }
          },
          "required": ["cmd"]
        }
      ]
    },
    "sequence_task": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "sequence": {
              "type": "array",
              "items": { "$ref": "#/definitions/task" }
            },
            "help": { "type": "string" }
          },
          "required": ["sequence"]
        }
      ]
    }
  },
  "properties": {
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "$ref": "#/definitions/task" }
        ]
      }
    }
  }
}
